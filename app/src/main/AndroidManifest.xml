            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">

        </activity>
        <activity android:name=".mine.PersonalDataActivity" />
        <activity android:name=".mine.AccountBalanceActivity" />
        <activity android:name=".mine.AvailableBalanceActivity" />
        <activity android:name=".mine.MyCouponsActivity" />
        <activity android:name=".mine.OpenMembershipActivity" />
        <activity android:name=".mine.MyCollectionActivity" />
