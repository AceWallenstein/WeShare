<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            tools:text="2019-10-28  14:00"
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey73"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="订单号：2019102848100549"
            android:layout_toStartOf="@id/tv_order_time"
            android:textColor="@color/grey73"
            android:textSize="11sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F6F5F5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_money"
            android:layout_toRightOf="@id/iv_shop"
            tools:text="轻熟风垂感先手首要系带翻领双排扣过膝风衣外套女"
            android:textColor="@color/light_black"
            android:textSize="12sp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_goods_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_shop"
            android:layout_below="@id/tv_title"
            tools:text="杏色；xs"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="X1件"
            android:textColor="@color/light_black"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>