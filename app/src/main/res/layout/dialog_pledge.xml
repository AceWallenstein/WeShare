<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="服务"
            android:textColor="@color/light_black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/bg_red_dot_small"
        android:drawablePadding="15dp"
        android:text="正品保证"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:padding="10dp"
        android:text="本店郑重保证，本店所有商品一律为正品，若购买到假冒商品，双倍赔偿。"
        android:textColor="@color/light_black"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/bg_red_dot_small"
        android:drawablePadding="15dp"
        android:text="七天无理由退换"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:padding="10dp"
        android:text="七天无理由退换货，更换新品（邮费需购买者承担。"
        android:textColor="@color/light_black"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/bg_red_dot_small"
        android:drawablePadding="15dp"
        android:text="30天质保"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:padding="10dp"
        android:text="30天保质，有问题无条件更换。"
        android:textColor="@color/light_black"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/bg_red_dot_small"
        android:drawablePadding="15dp"
        android:text="48小时发货"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:padding="10dp"
        android:text="支持48小时发货（法定节日或促销活动期间以平台通知为准，因自然灾害等不可抗因素造成的延迟发货除外）"
        android:textColor="@color/light_black"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="#EAEAEA" />

    <TextView
        android:id="@+id/tv_guarantees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_guarantees"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="更多服务保障"
        android:textColor="@color/light_black"
        android:textSize="15sp" />
</LinearLayout>