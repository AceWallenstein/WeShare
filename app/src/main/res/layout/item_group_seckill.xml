<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/tample" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_shop"
        android:text="【限量抢】"
        android:textColor="@color/orange"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_status"
        android:text="Ray竹炭纤维面膜"
        android:textColor="@color/light_black"
        android:textSize="13sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_status"
        android:layout_toRightOf="@id/iv_shop"
        android:text="￥38.9元"
        android:textColor="@color/orange"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_underlined_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_price"
        android:layout_toRightOf="@id/tv_price"
        android:text="￥68.9元"
        android:background="@drawable/bg_underlined"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:id="@+id/tv_seckill_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_price"
        android:background="@drawable/bg_tv_red"
        android:layout_toRightOf="@id/iv_shop"
        android:text="2019年11月1日 10:00开抢"
        android:textColor="@color/white"
        android:textSize="10dp" />

</RelativeLayout>