<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/rl_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_rect_light_yellow">

        <LinearLayout
            android:id="@+id/ll_coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/juice"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_coupons_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/juice"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_coupons_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺优惠券"
                android:textColor="@color/juice"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupons_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_coupons"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="新用户可用"
            android:textColor="@color/juice"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_coupons_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_coupons_condition"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="有效期2019.09.06-2019.10.06"
            android:textColor="@color/juice"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_coupons_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:text="立即领取"
            android:textColor="@color/juice"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_receive"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/rl_coupons"
        android:layout_marginTop="-35dp"/>

</RelativeLayout>
